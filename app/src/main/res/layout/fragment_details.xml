<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:baselineAligned="false"
            android:orientation="vertical">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/idViewPager"
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tablayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:background="@android:color/transparent"
                    app:tabBackground="@drawable/tab_selector"
                    app:tabGravity="center"
                    app:tabIndicatorHeight="0dp" />

            </androidx.viewpager.widget.ViewPager>


            <!-- <ImageSwitcher
                 android:id="@+id/image_switcher"
                 android:layout_width="match_parent"
                 android:layout_height="250dp" /> -->

        </LinearLayout>

        <TextView
            android:id="@+id/no_pic_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone"
            tools:text="No picture has been provided" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/assignedagent_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="2dp"
                android:padding="16dp"
                android:text="Agent"
                android:textSize="16sp"
                android:textStyle="bold"
                app:drawableLeftCompat="@drawable/person_24px"
                app:drawableTint="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/availability_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.1"
                android:gravity="end"
                android:padding="16dp"
                android:text="Availability"
                android:textSize="16sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:id="@+id/type_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="2dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:drawableLeftCompat="@drawable/home_24px"
                    app:drawableTint="@color/colorPrimaryDark"
                    tools:text="Type" />


                <TextView
                    android:id="@+id/price_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="2dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:drawableLeftCompat="@drawable/sell_24px"
                    app:drawableTint="@color/colorPrimaryDark"
                    tools:text="Price" />


                <TextView
                    android:id="@+id/surface_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="2dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:drawableLeftCompat="@drawable/fullscreen_24px"
                    app:drawableTint="@color/colorPrimaryDark"
                    tools:text="Surface" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:id="@+id/rooms_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="2dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:drawableLeftCompat="@drawable/nest_multi_room_24px"
                    app:drawableTint="@color/colorPrimaryDark"
                    tools:text="PiÃ¨ce(s) : \n        1" />


                <TextView
                    android:id="@+id/bedroom_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="2dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:drawableLeftCompat="@drawable/bedroom_24px"
                    app:drawableTint="@color/colorPrimaryDark"
                    tools:text="Chambre(s) : \n           1" />


                <TextView
                    android:id="@+id/bathroom_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="2dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:drawableLeftCompat="@drawable/shower_24px"
                    app:drawableTint="@color/colorPrimaryDark"
                    tools:text="Salle(s) de bain : \n        1" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/location_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="16dp"
            android:textSize="16sp"
            android:textStyle="bold"
            app:drawableLeftCompat="@drawable/home_pin_24px"
            app:drawableTint="@color/colorPrimaryDark"
            tools:text="146 Rue de la grande route, 75000 Paris" />


        <com.google.android.gms.maps.MapView
            android:id="@+id/details_map"
            android:layout_width="match_parent"
            android:layout_height="150dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:id="@+id/description_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="italic"
                tools:text="Lorem ipsum dolor sit amet,
                 consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore
                  et dolore magna aliqua." />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Nearby point of interest :" />

        <TextView
            android:id="@+id/nearbyPOI_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="16dp"
            tools:text="Restaurant, Shopping, Entertainment" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:id="@+id/entrydate_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Entry Date"
                android:textSize="16sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/saledate_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Sale Date"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <Button
            android:id="@+id/sold_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="64dp"
            android:layout_marginEnd="64dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/rounded_corner"
            android:padding="16dp"
            android:text="Mark as sold"
            android:textColor="#FFFFFF"
            android:visibility="gone" />

        <Button
            android:id="@+id/edit_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="64dp"
            android:layout_marginEnd="64dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/rounded_corner"
            android:padding="16dp"
            android:text="Edit property"
            android:textColor="#FFFFFF"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView>